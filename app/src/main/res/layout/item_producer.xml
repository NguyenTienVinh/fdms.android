<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:car_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <import type="android.text.TextUtils"/>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.framgia.fdms.screen.producer.ProducerViewModel"
            />
        <variable
            name="producer"
            type="com.framgia.fdms.data.model.Producer"
            />
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_3"
        android:padding="@dimen/dp_3"
        car_view:cardCornerRadius="@dimen/dp_1"
        car_view:cardElevation="@dimen/dp_3"
        tools:cardCornerRadius="@dimen/dp_3"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp_10"
                    car_view:srcCompat="@drawable/ic_maker"
                    tools:ignore="ContentDescription,VectorDrawableCompat"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:padding="@dimen/dp_10"
                    android:text='@{producer.name}'
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_7"
                    android:layout_marginRight="@dimen/dp_7"
                    android:onClick="@{() -> viewModel.onEditProducerClick(producer)}"
                    android:padding="@dimen/dp_5"
                    car_view:srcCompat="@drawable/ic_edit"
                    tools:ignore="ContentDescription"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center_vertical"
                    android:onClick="@{() -> viewModel.onDeleteProducerClick(producer)}"
                    android:padding="@dimen/dp_5"
                    car_view:srcCompat="@drawable/ic_x_button"
                    tools:ignore="ContentDescription"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_60"
                android:layout_marginStart="@dimen/dp_60"
                android:maxLines="2"
                android:paddingBottom="@dimen/dp_10"
                android:text='@{producer.description}'
                android:textSize="@dimen/sp_12"
                android:visibility="@{TextUtils.isEmpty(producer.description)? View.GONE : View.VISIBLE}"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>