<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="isExpanded"
            type="boolean"
            />
        <variable
            name="deviceUsingHistory"
            type="com.framgia.fdms.data.model.DeviceUsingHistory"
            />
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@{isExpanded? @color/color_green_600: @android:color/white}"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/dp_3"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_2"
                android:background="@color/color_green_600"
                tools:ignore="ContentDescription,UnusedAttribute"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_20"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:paddingStart="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10"
                android:text="@{deviceUsingHistory.staffName}"
                android:textColor="@{isExpanded? @android:color/white: @android:color/black}"
                android:textSize="@dimen/sp_18"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:padding="@dimen/dp_10"
                android:text="@{`(` + deviceUsingHistory.usingDevices.size()+`)`}"
                android:textColor="@{isExpanded? @android:color/white: @color/color_dark_gray}"
                android:textSize="@dimen/sp_16"
                android:textStyle="italic"
                />
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:padding="@dimen/dp_5"
                android:rotation="@{isExpanded? 180: 0}"
                android:src="@{isExpanded?@drawable/ic_down_arrow_white: @drawable/ic_down_arrow_black}"
                tools:ignore="ContentDescription"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>


</layout>