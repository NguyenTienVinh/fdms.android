<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>

        <import type="com.framgia.fdms.utils.Utils"/>

        <variable
            name="device"
            type="com.framgia.fdms.data.model.Device"
            />
        <variable
            name="viewModel"
            type="com.framgia.fdms.screen.deviceusingmanager.DeviceUsingManagerViewModel"
            />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white_light"
        android:orientation="horizontal"
        android:onClick="@{() -> viewModel.onItemDeviceClick(device)}"
        android:padding="@dimen/dp_10"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:layout_weight="1"
            android:paddingEnd="@dimen/dp_15"
            android:paddingStart="@dimen/dp_15"
            android:textColor="@color/color_blue_170"
            android:text="@{device.productionName}"
            android:textSize="@dimen/sp_15"
            android:textStyle="italic"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:text="@string/msg_search_error"
            android:textSize="@dimen/sp_14"
            />
    </LinearLayout>
</layout>