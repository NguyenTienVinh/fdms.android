<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <import type="com.framgia.fdms.utils.Utils"/>

        <variable
            name="device"
            type="com.framgia.fdms.data.model.Device"
            />

        <variable
            name="deviceUsingHistory"
            type="com.framgia.fdms.data.model.DeviceUsingHistory"
            />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_50"
        android:paddingStart="@dimen/dp_50"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:text="@{device.deviceCode}"
            android:textSize="@dimen/sp_16"
            android:textStyle="italic"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:text="@{@string/using_device_time(Utils.getStringDate(deviceUsingHistory.startDate), Utils.getStringDate(deviceUsingHistory.endDate))}"
            android:textSize="@dimen/sp_14"
            />
    </LinearLayout>
</layout>