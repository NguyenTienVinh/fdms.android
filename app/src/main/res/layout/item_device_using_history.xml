<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.framgia.fdms.utils.Utils"/>

        <variable
            name="device"
            type="com.framgia.fdms.data.model.Device"/>

        <variable
            name="deviceUsingHistory"
            type="com.framgia.fdms.data.model.DeviceUsingHistory"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:contentDescription="@string/action_user_return_device"
                android:src="@drawable/ic_devices_black_24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:text="@{device.productionName}"
                android:textSize="@dimen/sp_16"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:contentDescription="@string/action_user_return_device"
                app:srcCompat="@drawable/ic_timer"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:text="@{@string/using_device_time(Utils.getStringDate(deviceUsingHistory.startDate), Utils.getStringDate(deviceUsingHistory.endDate))}"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>
    </LinearLayout>
</layout>